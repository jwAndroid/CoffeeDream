<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_r_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Auth.KakaoLoginApi">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/intro_r_text"
        app:layout_constraintBottom_toTopOf="@+id/kakaoLoginButton2"
        app:layout_constraintEnd_toEndOf="@+id/kakaoLoginButton2"
        app:layout_constraintStart_toStartOf="@+id/kakaoLoginButton2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kakaoLoginButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:background="@drawable/kakao_login_medium_wide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/kakaoLoginButton2"
        app:layout_constraintStart_toStartOf="@+id/kakaoLoginButton2"
        app:layout_constraintTop_toBottomOf="@+id/kakaoLoginButton2">

    </com.google.android.gms.common.SignInButton>


</androidx.constraintlayout.widget.ConstraintLayout>